<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Welcome to Web-Chat</title>
    <style>.btn{border:1px solid gray;margin-bottom: 5px;}</style>
</head>
<body>
    <%- include('partials/mainnav'); -%>
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-md-2">
                <div class="list-group">
                    <% for(var column in columns){ %>
                    <a id="a_<%= column %>" href="#" class="list-group-item list-group-item-action">
                        <label for="<%= column %>"><%= column %></label>
                        <span style="float:right;"><input onchange="handler(this)" id="<%= column %>" type="checkbox"/></span>
                    </a>
                    <% } %>
                </div>
                <div class="list-group">
                    <button onclick="plot('bar', '<%= tablename %>')" style="color:black;" type="button" class="btn btn-success list-group-item">Bar Chart</button>
                    <button onclick="plot('line', '<%= tablename %>')" style="color: black;" type="button" class="btn btn-success list-group-item">Line Chart</button>
                    <button onclick="plot('pie', '<%= tablename %>')" style="color: black;" type="button" class="btn btn-success list-group-item">Pie Chart</button>
                </div>
            </div>
            <div class="col-md-9">
                <canvas id="chart"></canvas>
            </div>
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>

let columns = [];
var myChart;
function handler(ele) {
    if(ele.checked==true) {
        columns.push(ele.id);
        console.log(columns);
    }else {
        let ind = columns.indexOf(ele.id);
        if(ind>-1) {
            columns.splice(ind,1);
        }
        console.log(columns);
    }
}
function plot(met, tablename) {
    if(columns.length > 1) {
        let col1 = columns[0];
        let col2 = columns[1];

        $.ajax({
            type: "POST",
            url: '/api',
            data: {tablename:tablename,col1:col1,col2:col2},
            success: function(res) {
                res = JSON.parse(res);
                let labels = [];
                let data = [];
                res.forEach(ele => {
                    labels.push(ele[col1]);
                    data.push(ele[col2]);
                });
                chartHelper(labels, data, met);
            }
        });
    }
}
function chartHelper(labels, data, met) {
    if(met == "bar") barChart(labels, data);
    else if(met == "line") lineChart(labels, data);
    else if(met == "pie") pieChart(labels, data);
    
}

// PLOTS
function barChart(labels,data) {
    var ctx = document.getElementById('chart').getContext('2d');
    if (window.myChart!=undefined) {
        window.myChart.destroy();
    }
    window.myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,//aray
            datasets: [{
                label: 'Iris Dataset',
                data: data,//array
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            },
            resposive:true,
            maintainAspectRatio: true
        }
    });
}

function lineChart(labels,data) {
    var ctx = document.getElementById('chart').getContext('2d');
    if (window.myChart!=undefined) {
        window.myChart.destroy();
    }
    window.myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,//aray
            datasets: [{
                label: 'Iris Dataset',
                data: data,//array
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            },
            resposive:true,
            maintainAspectRatio: true
        }
    });
}

function pieChart(labels,data) {
    var ctx = document.getElementById('chart').getContext('2d');
    if (window.myChart!=undefined) {
        window.myChart.destroy();
    }
    window.myChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: labels,//aray
            datasets: [{
                label: 'Iris Dataset',
                data: data,//array
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            },
            resposive:true,
            maintainAspectRatio: true
        }
    });
}
</script>

</html>