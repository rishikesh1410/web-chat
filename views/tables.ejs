<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Welcome to Web-Chat</title>
    <style>.btn{border:1px solid gray;margin-bottom: 5px;}</style>
</head>
<body>
    <%- include('partials/mainnav'); -%>
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-md-2">
                <div class="list-group">
                    <% for(var i=0;i<tables.length;i++){ %>
                    <a id="<%= tables[i] %>" href="/api/<%= tables[i] %>" class="list-group-item list-group-item-action"><%= tables[i] %></a>
                    <% } %>
                    <a class="btn btn-success mt-3" href="/charts/<%= table %>" role="button">Next</a>
                </div>
            </div>
            <div class="col-md-9" style="height:400px;overflow-y:scroll;">
                <table class="table" style="height:400px;overflow-y:scroll;">
                    <thead class="thead-light">
                      <tr>
                        <th scope="col">#</th>
                        <% for(var column in content[0]){ %>
                        <th scope="col"><%= column %></th>
                        <% } %>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0;i<content.length;i++){ %>
                            <tr>
                                <th scope="row"><%= i %></th>
                                <% for(var x in content[i]) { %>
                                    <th scope="row"><%= content[i][x] %></th>
                                <% } %>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('partials/footer') -%>
</body>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
